{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "es6"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "noEmit": false
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}